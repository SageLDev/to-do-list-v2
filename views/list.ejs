<%- include("header") -%>

<body>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(listItem => { %>

      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" onchange="this.form.submit()" value="<%= JSON.stringify({listName: listTitle, itemName: listItem.name, itemId: listItem._id})%>">
          <p><%= listItem.name %></p>
        </div>
      </form>

    <% }); %>




    <form class="itemform" action="/" method="post">
      <input type="text" name="itemBox" placeholder="New Item" autocomplete="off" autofocus>
      <button type="submit" name="addButton" value="<%= listTitle %>">+</button>
    </form>
  </div>

</body>
<%- include("footer") -%>

</html>
